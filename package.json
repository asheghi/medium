{
  "scripts": {
    "dev": "npm run server",
    "prod": "npm run build && npm run server:prod",
    "build": "dotenv vite build && vite build --ssr",
    "server": "dotenv node ./server",
    "server:prod": "dotenv -v NODE_ENV=production node ./server",
    "lint": "eslint . --ext .js,.vue",
    "lint-fix": "eslint . --ext .js,.vue --fix",
    "prisma:gen": "npx prisma generate --schema ./server/prisma/schema.prisma/",
    "prisma:dev": "npx prisma migrate dev --name init --schema ./server/prisma/schema.prisma",
    "prisma:deploy": "npx prisma db push --skip-generate --schema ./server/prisma/schema.prisma",
    "prisma:reset": "npx prisma migrate reset --schema ./server/prisma/schema.prisma",
    "prisma:studio": "npx prisma studio --schema ./server/prisma/schema.prisma -p 8080",
    "start:docker": "npm run prisma:deploy && npm run server:prod"
  },
  "dependencies": {
    "@prisma/client": "^3.9.1",
    "@tailwindcss/typography": "^0.5.1",
    "@tiptap/extension-bubble-menu": "^2.0.0-beta.55",
    "@tiptap/starter-kit": "^2.0.0-beta.181",
    "@tiptap/vue-3": "^2.0.0-beta.90",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/server-renderer": "^3.2.26",
    "axios": "^0.25.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "cross-env": "^7.0.3",
    "debug": "^4.3.3",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "lodash.debounce": "^4.0.8",
    "marked": "^4.0.12",
    "qs": "^6.10.3",
    "sass": "^1.49.4",
    "slugify": "^1.6.5",
    "vite": "^2.7.2",
    "vite-plugin-ssr": "^0.3.43",
    "vite-svg-loader": "^3.1.2",
    "vue": "^3.2.26"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-vue": "^8.4.0",
    "postcss": "^8.4.6",
    "prisma": "^3.9.1",
    "tailwindcss": "^3.0.18"
  },
  "imports": {
    "@/*": "./*"
  }
}
