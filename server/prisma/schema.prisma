// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./blog.db"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  slug     String
  createdAt DateTime @default(now())
  content   String?
  published Boolean  @default(false)
  authorId  Int
  author      User     @relation(fields: [authorId], references: [id])
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  userId Int     @unique
  User   User    @relation(fields: [userId], references: [id])
}

model User {
  id      Int      @id @default(autoincrement())
  name    String?
  email   String   @unique
  password String
  Post    Post[]
  Profile Profile?
}

//cookie session
model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}
